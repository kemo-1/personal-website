---
const { title, text, dir } = Astro.props;
const isRight = dir === 'right';
---

<div class={`${dir}-box relative w-[10rem] h-[10rem] join`}>
  {isRight ? (
    <>
      <!-- Top box (title) -->
      <div class="join-item absolute inset-0 z-10 bg-green-500 rounded-xl flex items-center justify-center text-white text-3xl font-bold shadow-lg">
        {title}
      </div>

      <!-- Bottom box (description) -->
      <div class={`${dir}-paragraph join-item absolute inset-0 z-0 bg-green-300 rounded-xl flex items-center justify-center text-center text-green-900 text-xl px-4 leading-relaxed shadow-inner`}>
        {text}
      </div>
    </>
  ) : (
    <>
      <!-- Bottom box (description) -->
      <div class={`${dir}-paragraph join-item absolute inset-0 z-0 bg-green-300 rounded-xl flex items-center justify-center text-center text-green-900 text-xl px-4 leading-relaxed shadow-inner`}>
        {text}
      </div>

      <!-- Top box (title) -->
      <div class="join-item absolute inset-0 z-10 bg-green-500 rounded-xl flex items-center justify-center text-white text-3xl font-bold shadow-lg">
        {title}
      </div>
    </>
  )}
</div>
